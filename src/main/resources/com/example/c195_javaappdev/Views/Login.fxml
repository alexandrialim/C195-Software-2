<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="268.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CONTROLLER.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="welcomeLabel" text="Welcome, please sign in!">
         <font>
            <Font name="Monospaced Bold Italic" size="18.0" />
         </font>
      </Label>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="225.0" minWidth="10.0" prefWidth="148.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="379.0" minWidth="10.0" prefWidth="312.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="usernameLabel" alignment="TOP_LEFT" prefHeight="19.0" prefWidth="128.0" text="User Name:" textAlignment="CENTER" />
            <Label fx:id="passwordLabel" alignment="TOP_LEFT" prefHeight="17.0" prefWidth="305.0" text="Password:" textAlignment="CENTER" GridPane.rowIndex="1" />
            <TextField fx:id="passwordBox" layoutX="165.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="signinbutton" alignment="CENTER" mnemonicParsing="false" onAction="#clicktologin" text="Sign In" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin></Button>
            <Label fx:id="locationLabel" alignment="BOTTOM_RIGHT" text="Location" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
               <font>
                  <Font name="Monospaced Bold Italic" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="usernameBox" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</VBox>
